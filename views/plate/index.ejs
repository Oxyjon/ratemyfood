<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-utensils"></i> RateMyFood!</h1>
            <p>Show us what you've made!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/plate/new">Create New Post</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% plates.forEach(function(plate){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail show">
                <img src="<%=plate.image%>">
                <div class="caption">
                    <h4><%= plate.name %></h4>
                    <% if (plate.rating === 0) { %>
                    <em>No reviews yet.</em>
                    <% } else { %>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star <% if (plate.rating > 1.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (plate.rating > 2.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (plate.rating > 3.5) { %> checked <% } %>"></span>
                    <span class="fa fa-star <% if (plate.rating > 4.5) { %> checked <% } %>"></span>
                    <% } %>
                </div>
                <p>
                    <a href="/plate/<%= plate._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>