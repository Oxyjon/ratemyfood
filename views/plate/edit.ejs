<% include ../partials/header %>
<div class="container">
    <div class="row">

        <div class="formStyle">
            <h1>Edit <%=plate.name%></h1>
            <form action="/plate/<%=plate._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="plate[name]" value="<%=plate.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="plate[image]" value="<%=plate.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="plate[description]" value="<%=plate.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/plate">Go Back</a>
        </div>


    </div>
</div>
<% include ../partials/footer %>